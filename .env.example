# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/dbname?schema=public"

# Email Configuration (Resend)
RESEND_API_KEY="your_resend_api_key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Optional: Application Metadata
# APP_NAME="InterlinedList"
# APP_CONTACT_EMAIL="contact@interlinedlist.com"
# APP_USER_AGENT="Custom User-Agent String"

# Optional: Session Configuration
# SESSION_COOKIE_NAME="session"
# SESSION_MAX_AGE="604800"

# Vercel automatically provides VERCEL_URL in production
# For custom domains, set NEXT_PUBLIC_APP_URL explicitly

# Bluesky OAuth (optional - auto-derived from NEXT_PUBLIC_APP_URL when not set)
# Set explicitly if using a tunnel for local dev (e.g. ngrok)
# BLUESKY_CLIENT_ID="https://yourdomain.com/api/oauth/client-metadata"
