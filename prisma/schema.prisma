generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @default(uuid())
  email                String    @unique
  username             String    @unique
  passwordHash         String
  displayName          String?
  avatar               String?
  bio                  String?
  emailVerified        Boolean   @default(false)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  theme                      String    @default("system")
  passwordResetExpires       DateTime?
  passwordResetToken         String?
  emailVerificationToken     String?
  emailVerificationExpires   DateTime?
  pendingEmail              String?
  emailChangeToken          String?
  emailChangeExpires        DateTime?
  maxMessageLength           Int       @default(666)
  defaultPubliclyVisible     Boolean   @default(false)
  messagesPerPage            Int       @default(20)
  viewingPreference         String    @default("all_messages")
  showPreviews              Boolean   @default(true)
  showAdvancedPostSettings  Boolean   @default(false)
  latitude                  Float?
  longitude                 Float?
  isPrivateAccount          Boolean   @default(false)
  cleared                  Boolean   @default(false)
  messages             Message[]
  lists                List[]
  organizations        UserOrganization[]
  administrator        Administrator?
  followers            Follow[]    @relation("Following")
  following            Follow[]    @relation("Follower")
  linkedIdentities     LinkedIdentity[]
  listWatchers         ListWatcher[]
  folders              Folder[]
  documents            Document[]
  syncTokens           SyncToken[]

  @@map("users")
}

model SyncToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String
  name      String   @default("CLI")
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tokenHash])
  @@index([userId])
  @@map("sync_tokens")
}

model Message {
  id              String    @id @default(uuid())
  content         String
  publiclyVisible Boolean   @default(true)
  userId          String
  parentId        String?
  linkMetadata    Json?
  imageUrls       Json?
  videoUrls       Json?
  crossPostUrls   Json?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lists           List[]
  parent          Message?  @relation("MessageReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies         Message[] @relation("MessageReplies")

  @@index([createdAt])
  @@index([publiclyVisible])
  @@index([parentId])
  @@map("messages")
}

model List {
  id          String   @id @default(uuid())
  userId      String
  messageId   String?
  parentId    String?
  title       String
  description String?
  isPublic    Boolean  @default(false)
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  message     Message? @relation(fields: [messageId], references: [id], onDelete: SetNull)
  parent      List?    @relation("ListParent", fields: [parentId], references: [id], onDelete: SetNull)
  children    List[]   @relation("ListParent")
  properties  ListProperty[]
  dataRows    ListDataRow[]
  watchers    ListWatcher[]

  @@index([userId, deletedAt])
  @@index([messageId])
  @@index([createdAt])
  @@index([parentId])
  @@index([isPublic])
  @@map("lists")
}

model ListProperty {
  id                  String   @id @default(uuid())
  listId              String
  propertyKey         String
  propertyName        String
  propertyType        String
  displayOrder        Int      @default(0)
  isRequired          Boolean  @default(false)
  defaultValue        String?
  validationRules     Json?
  helpText            String?
  placeholder         String?
  isVisible           Boolean  @default(true)
  visibilityCondition Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  list                List     @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@unique([listId, propertyKey])
  @@index([listId, displayOrder])
  @@map("list_properties")
}

model ListDataRow {
  id          String   @id @default(uuid())
  listId      String
  rowData     Json
  rowNumber   Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  list        List     @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@index([listId, deletedAt])
  @@index([listId, createdAt])
  @@map("list_data_rows")
}

model Administrator {
  id        String   @id @default(uuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("administrators")
}

model Organization {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  avatar      String?
  isPublic    Boolean  @default(true)
  isSystem    Boolean  @default(false)
  settings    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  members     UserOrganization[]

  @@index([isPublic, deletedAt])
  @@index([isSystem])
  @@index([slug])
  @@index([deletedAt])
  @@map("organizations")
}

model UserOrganization {
  id             String       @id @default(uuid())
  userId         String
  organizationId String
  role           String       @default("member")
  active         Boolean      @default(true)
  joinedAt       DateTime     @default(now())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
  @@index([userId, role])
  @@index([organizationId, role])
  @@index([organizationId, active])
  @@map("user_organizations")
}

model Follow {
  id          String   @id @default(uuid())
  followerId  String
  followingId String
  status      String   @default("approved")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  follower    User     @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId, status])
  @@index([followingId, status])
  @@index([followingId, status, createdAt])
  @@map("follows")
}

model ListWatcher {
  id        String   @id @default(uuid())
  userId    String
  listId    String
  role      String   @default("watcher")  // "watcher" | "collaborator" | "manager"
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  list List @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@unique([userId, listId])
  @@index([userId])
  @@index([listId])
  @@map("list_watchers")
}

model Folder {
  id        String    @id @default(uuid())
  userId    String
  parentId  String?
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent    Folder?   @relation("FolderTree", fields: [parentId], references: [id], onDelete: SetNull)
  children  Folder[]  @relation("FolderTree")
  documents Document[]

  @@unique([userId, parentId, name])
  @@index([userId, deletedAt])
  @@index([parentId])
  @@map("folders")
}

model Document {
  id          String    @id @default(uuid())
  userId      String
  folderId    String?
  title       String
  content     String    @db.Text
  relativePath String
  isPublic    Boolean   @default(false)
  contentHash String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  folder Folder? @relation(fields: [folderId], references: [id], onDelete: SetNull)

  @@unique([folderId, relativePath])
  @@index([userId, deletedAt])
  @@index([folderId])
  @@index([userId, folderId])
  @@map("documents")
}

model LinkedIdentity {
  id               String    @id @default(uuid())
  userId           String
  provider         String    // "github" | "bluesky" | "mastodon:instance.domain"
  providerUserId   String
  providerUsername String?
  providerData     Json?
  profileUrl       String?
  avatarUrl        String?
  connectedAt      DateTime  @default(now())
  lastVerifiedAt   DateTime?

  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@index([provider, providerUserId])
  @@map("linked_identities")
}
